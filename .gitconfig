[user]
	email = joshting25@gmail.com
	name = Josh Ting
[alias]
	a = add
	d = diff
	de = "!f() { args=(); for dir in \"$@\"; do args+=(\":!$dir\"); done; git diff \"${args[@]}\"; }; f" # exclude dirs
	dw = diff --word-diff
	s = status
	co = checkout
	conf = config
	cfeg = config -e --global
	cp = cherry-pick
	br = branch
	brm = branch -m
	cm = commit
	cmam = commit -a -m
	cmm = commit -m
	f = fetch
	l = log
	lgrep = log -S
	ll = log --oneline --abbrev --graph --decorate
	mnts = maintenance start
	m = merge
	psu = "!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)" # redundant because of autoSetupRemote
	pf = push --force-with-lease
	r = reset
	rb = rebase
	sq = rebase -i HEAD~2
	rem = remote
	smu = submodule update --init --recursive
	st = stash
	sta = stash --include-untracked
	stp = stash pop
	standup = !git log --author=$USER --since='9am yesterday' --all --format=%s
	sw = switch
	which = !git branch | grep -i
[column]
	ui = auto
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
	default = simple
	autoSetupRemote = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
[commit]
	verbose = true
[core]
	excludesfile = ~/.gitignore
[pull]
	rebase = true
[rerere]
        enabled = true
[status]
	submodulesummary = 1
